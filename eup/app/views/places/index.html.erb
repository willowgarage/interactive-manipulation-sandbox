<h1>Listing places</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Tags</th>
    <th>Locx</th>
    <th>Locy</th>
    <th>Width</th>
    <th>Height</th>
    <th>Image</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @places.each do |place| %>
  <tr>
    <td><%= place.name %></td>
    <td><%= place.tags %></td>
    <td><%= place.locx %></td>
    <td><%= place.locy %></td>
    <td><%= place.width %></td>
    <td><%= place.height %></td>
    <td><%= image_tag place.image.url(:thumb) %></td>
    <td><%= link_to 'Show', place %></td>
    <td><%= link_to 'Edit', edit_place_path(place) %></td>
    <td><%= link_to 'Destroy', place, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

