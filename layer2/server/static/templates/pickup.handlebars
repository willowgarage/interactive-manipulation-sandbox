<div id="content">

  <div id="tab-container">
      <!-- The "content" parameter here is the robot object -->
      <ul>
        <li><a {{action navigate content}}> Navigate </a></li>
        <li><a {{action plug content}}> Plug </a></li>
        <li><a {{action look content}}> Look </a></li>
        <li class="tabselected"><a> Pick up </a></li>
        <li><a {{action markers content}}> Markers </a></li>
      </ul>
  </div>

  <div id="main-container">
    <div class="content">

        <table>
            <tr>
              <td>
                What the robot sees:<br>
                <div style="position: relative;">
                  <canvas id="canvas" width="400" height="300" style="position: absolute; left: 0; top: 0; z-index: 1;"></canvas>
                  <video id="video" preload="none" autoplay="true" width=400 height=300 {{bindAttr src="camera_url"}}></video><br>
                </div>
              </td>
              <td> <div class="button" {{action segmentAndRecognize target="controller"}}>Find objects</div>
            </tr>
        </table>

    </div>
  </div>

</div>
