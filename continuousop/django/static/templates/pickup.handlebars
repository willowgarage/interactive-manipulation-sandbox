<div id="content">

  <div id="tab-container">
      <!-- The "content" parameter here is the robot object -->
      <ul>
        <li><a {{action navigate content}}> Navigate </a></li>
        <li><a {{action plug content}}> Plug </a></li>
        <li><a {{action look content}}> Look </a></li>
        <li class="tabselected"><a> Pick up </a></li>
        <li><a {{action markers content}}> Markers </a></li>
      </ul>
  </div>

  <div id="main-container">
    <div class="content">

        <table>
            <tr>
              <td>
                What the robot sees:<br>
                <div style="position: relative;">
                  <!-- This div will hold an svg element we create to draw overlays on the video -->
                  <div id="canvas" style="position: absolute; left:0; top:0; z-index:1;"></div>
                  <video id="video" preload="none" autoplay="true" width=400 height=300 {{bindAttr src="pickup_camera_url"}}></video><br>
                </div>
              </td>
              <td>
                <div class="mybutton" {{action segmentAndRecognize target="controller"}}>Find objects</div><br>
                {{#if selected_object}}
                  <div class="mybutton" {{action pickupObject target="controller"}}>Pick up object</div><br>
                {{else}}
                  <div class="mybutton disabled"}}>Pick up object</div><br>
                {{/if}}
              </td>
            </tr>
        </table>

    </div>
  </div>

</div>
