<div class="header">
  <img src="static/img/wg-logo.png" class="headingimg" {{action showAllRobots}}>
  <span class="heading" {{action showAllRobots}}>{{name}}</span>


  <!-- The brown box containing robot information at the top of the screen -->
  <div class="robot_info_container">
    <div class="robot_info">
  {{#if isConnected}}
      <table id="table1">
        <tr>
          <td>
            <table id="table2">
              <tr>
                <th> Battery </th>
                <th> Location </th>
              </tr>
              <tr>
                <td><span id="battery">{{battery}}</span>%{{#if plugged_in}}<span>, charging</span>{{/if}}
                  </td>
                <td><span>{{pose_display}}</span></td>
              </tr>
            </table>
          </td>

          <td>
            <!-- Enabled/disabled switch -->
            <div class="onoffswitch">
                {{view Ember.Checkbox checkedBinding="enabled" class="onoffswitch-checkbox"
                  id="myonoffswitch"}}
                <label class="onoffswitch-label" for="myonoffswitch">
                    <div class="onoffswitch-inner">
                        <div class="onoffswitch-active">Enabled</div>
                        <div class="onoffswitch-inactive">Disabled</div>
                    </div>
                    <div class="onoffswitch-switch"></div>
                </label>
            </div>
            <i>(read-only for now)</i>
          </td>
        </tr>
      </table>

  {{else}}
    <span class="warning">WARNING: Connection to robot unavailable. Press reload to retry.</span>
  {{/if}}
    </div>
  </div>
</div>

{{outlet periphery}}

{{outlet main}}

<div class="progress_update">
    {{progress_update}}
</div>
