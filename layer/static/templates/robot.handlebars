<div class="header">
  <img src="static/img/wg-logo.png" class="headingimg" {{action showAllRobots}}>
  <span class="heading" {{action showAllRobots}}>{{name}}</span>


  <!-- The brown box containing robot information at the top of the screen -->
  <div class="robot_info_container">
    <div class="robot_info">
  {{#if isConnected}}
      <table>
        <tr>
          <th> Battery </th>
          <th> Location </th>
          <th> Motors </th>
          <th> Status </th>
        </tr>
        <tr>
          <td><span id="battery">{{battery}}</span>%{{#if plugged_in}}<span>, charging</span>{{/if}}
            </td>
          <td><span>{{pose.x}}, {{pose.y}}</span></td>
          <td><span class="tbd">unknown</span></td>
          <td><span {{bindAttr class="status.class"}}>{{status.value}}</span></td>
        </tr>
      </table>
  {{else}}
    <span class="warning">WARNING: Connection to robot unavailable. Please reload browser to retry</span>
  {{/if}}
    </div>
  </div>
</div>

{{outlet}}
